# Monorepo-aware Dockerfile for gpt-api
FROM node:20-alpine AS deps
WORKDIR /app
COPY package.json package-lock.json* ./
COPY shared-interfaces ./shared-interfaces
COPY gpt-api/package.json ./gpt-api/package.json
RUN npm ci -w gpt-api --omit=dev

FROM node:20-alpine AS builder
WORKDIR /app
COPY . .
RUN npm ci
RUN npm run build -w gpt-api

FROM node:20-alpine AS runner
WORKDIR /app/gpt-api
ENV NODE_ENV=production
RUN addgroup -S nodejs && adduser -S nestjs -G nodejs
COPY --from=deps /app/node_modules /app/node_modules
COPY --from=deps /app/gpt-api/node_modules ./node_modules
COPY --from=builder /app/shared-interfaces /app/shared-interfaces
COPY --from=builder /app/gpt-api/dist ./dist
COPY --from=builder /app/gpt-api/package.json ./package.json
RUN apk add --no-cache curl
USER nestjs
EXPOSE 3001
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3001/health || exit 1
CMD ["node", "dist/main"]