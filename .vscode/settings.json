{
  // ESLint configuration
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue"],

  // Auto fix on save - ESLint runs FIRST and ONLY
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // DISABLE format on save to prevent Prettier from overriding ESLint
  "editor.formatOnSave": false,

  // ESLint working directories for monorepo
  "eslint.workingDirectories": [
    "./gpt-api",
    "./gpt-gateway",
    "./gpt-kafka-consumer",
    "./gpt-kafka-producer",
    "./gpt-ui",
    "./shared-interfaces"
  ],

  // Use project's ESLint
  "eslint.useESLintClass": true,

  // Disable Prettier formatting on save for code files (only ESLint should format)
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[vue]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Files to ignore
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true
  },

  // Auto save
  "files.autoSave": "onFocusChange"
}
